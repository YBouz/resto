generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Document {
  id          String   @id
  title       String
  description String?  @db.Text
  content     String?  @db.Text
  entityId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  published   Boolean  @default(false)
  slug        String   @unique

  @@index([entityId])
}

model Employee {
  id        String   @id
  firstName String
  lastName  String
  title     String?
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  imageUrl  String?
}

model Entity {
  id                 String   @id
  name               String
  address            String?
  registrationNumber String?
  licenseNumber      String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime
  regulator          String?
  tradeName          String?
}

model Lead {
  id        String   @id
  name      String
  email     String?
  phone     String?
  message   String?
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Post {
  id          String   @id
  title       String
  description String?  @db.Text
  content     String?  @db.Text
  authorId    String
  entityId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  published   Boolean  @default(false)
  slug        String   @unique

  @@index([authorId])
  @@index([entityId])
}
